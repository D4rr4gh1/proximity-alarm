{
  "expo": {
    "name": "proximity-alarm",
    "slug": "proximity-alarm",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "proximityalarm",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to trigger and set alarms.",
        "NSLocationAlwaysUsageDescription": "This app needs background location access to trigger alarms.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification",
          "audio"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.d4rr4gh.proximityalarm"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-sqlite",
      "expo-audio"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "8a6e84bb-d0eb-466b-bbc5-388b6d111f9c"
      }
    }
  }
}
